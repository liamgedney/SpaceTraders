<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"

    tools:context="edu.gatech.spacetraders.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_name_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/player_name_input"
        android:layout_marginTop="8dp"
        android:layout_below="@id/player_name_header"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Skill Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/points_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_below="@id/player_name_input"/>

    <TextView
        android:text="Distribute 16 skill points to the following categories:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/points_subtitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/points_header"/>

    <TextView
        android:text="Pilot:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pilot_points_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_below="@id/points_subtitle"/>

    <TextView
        android:text="Pilot:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pilot_points_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_below="@id/pilot_points_header"/>


</RelativeLayout>
