<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"

    tools:context="edu.gatech.spacetraders.views.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_name_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/player_name_input"
        android:layout_marginTop="16dp"
        android:layout_below="@id/player_name_header"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="Skill Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/points_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_below="@id/player_name_input"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="Distribute 16 skill points to the following categories:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/points_subtitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/points_header"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="Pilot:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pilot_skill_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_below="@id/points_subtitle"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/pilot_skill_input"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fighter_skill_input"
        android:layout_below="@+id/points_subtitle"
        android:layout_alignStart="@+id/trader_skill_input"
        android:layout_alignLeft="@+id/trader_skill_input"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-19dp"
        android:layout_marginLeft="-19dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="209dp"
        android:layout_marginRight="209dp"
        android:layout_marginBottom="-14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="4" />

    <TextView
        android:text="Fighter:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fighter_skill_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/pilot_skill_header"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/fighter_skill_input"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pilot_skill_header"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp"
        android:layout_toEndOf="@+id/fighter_skill_header"
        android:layout_toRightOf="@+id/fighter_skill_header"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="4" />

    <TextView
        android:id="@+id/trader_skill_header"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_below="@+id/fighter_skill_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:text="Trader:" />

    <EditText
        android:id="@+id/trader_skill_input"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@+id/fighter_skill_input"
        android:layout_alignStart="@+id/trader_skill_header"
        android:layout_alignLeft="@+id/trader_skill_header"
        android:layout_alignBottom="@+id/fighter_skill_input"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:layout_marginBottom="-38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="4" />

    <TextView
        android:id="@+id/engr_skill_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trader_skill_header"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-1dp"
        android:text="Engineer:" />

    <TextView
        android:text="Difficulty:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/difficulty_spinner_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_below="@id/engr_skill_header"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:id="@+id/difficulty_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/difficulty_spinner_header"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="26dp" />

    <Button
        android:text="Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/create_button"
        android:onClick="onCreate" />

    <EditText
        android:id="@+id/engr_skill_input"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/trader_skill_header"
        android:layout_alignLeft="@+id/trader_skill_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="186dp"
        android:layout_marginRight="186dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="4" />

    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/exit_button"
        android:onClick="onCreate" />


</RelativeLayout>
